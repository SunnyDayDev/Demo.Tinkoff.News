<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Customize your theme here. -->

        <!-- region Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlHighlight">@color/colorAccent</item>

        <!-- endregion -->

        <!-- region Transitions -->

        <item name="android:windowActivityTransitions" tools:ignore="NewApi">true</item>

        <item name="android:windowEnterTransition" tools:ignore="NewApi">@transition/window_transition</item>
        <item name="android:windowExitTransition" tools:ignore="NewApi">@transition/window_transition</item>

        <item name="android:windowSharedElementEnterTransition" tools:ignore="NewApi">@transition/shared_element_transition</item>
        <item name="android:windowSharedElementExitTransition" tools:ignore="NewApi">@transition/shared_element_transition</item>

        <!-- endregion -->
        
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">

        <item name="android:textColorPrimary">@color/palette_white</item>
        <item name="colorControlNormal">@color/palette_white</item>

    </style>

</resources>
